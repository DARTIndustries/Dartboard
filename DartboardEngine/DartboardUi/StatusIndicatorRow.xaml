<UserControl x:Class="DartboardUi.StatusIndicatorRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DartboardUi"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Background="Black">
        <Ellipse x:Name="StatusElipse" Width="16" Height="16" Fill="Black" ToolTip="Initializing..."></Ellipse>
    </StackPanel>
</UserControl>
